<div class="flex flex-col justify-top items-center gap-8">
  <section class="flex justify-center items-center gap-4">
    <div class="flex flex-col justify-top items-center">
      <div>
        <PlayerName @playerId={{1}} />: <PlayerSymbol @game={{@model}} @playerId={{1}} />
      </div>
      <div>
        <PlayerName @playerId={{2}} />: <PlayerSymbol @game={{@model}} @playerId={{2}} />
      </div>
    </div>
    {{#if @model.winner_id}}
      <div>
        Winner: <PlayerSymbol @game={{@model}} @playerId={{@model.winner_id}} />
      </div>
    {{/if}}
  </section>

  <section class="w-96 h-96 bg-gray-800 grid grid-rows-3 grid-cols-3 gap-2">
    {{#each this.board as |cell index|}}
      <button
        type="button"
        class="text-lg flex justify-center items-center cursor-pointer hover:bg-gray-100 {{if cell.isWinning "bg-gray-600 text-white" "bg-white text-gray-800"}}"
        {{ on "click" (fn this.makeMove index) }}
      >
        {{#if cell.userId}}
          <PlayerSymbol @game={{@model}} @playerId={{cell.userId}}/>
        {{/if}}
      </button>
    {{/each}}
  </section>
</div>
